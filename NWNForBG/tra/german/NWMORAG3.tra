@0 = ~Wir sind die Meister, die Schöpfer, die Alten. Lange haben wir geschlafen, und die niederen Rassen sind aufsässig geworden!~ [NWMORA71]
@1 = ~Die Sklaven benehmen sich wie Könige, errichten Städte und Nationen und erheben Anspruch auf das, was uns gehört!~ [NWMORA72]
@2 = ~Haedraline und die Sklaven der Worte haben uns verraten, ließen uns zurück in unserem Exil im Quellenstein.~ [NWMORA73]
@3 = ~Die Zeit des Erwachens ist gekommen! Die Schöpfer werden auferstehen und Rache an der Welt nehmen, die uns vergessen hat!~ [NWMORA74]
@4 = ~Ein Feuersturm soll den endlosen Winter verbannen! Die Stadt der Sklaven soll von den Flammen unserer Wiedergeburt vollkommen aufgezehrt werden!~ [NWMORA75]
@5 = ~Die Hohepriester bereiten die abschließenden Rituale vor, die den Quellenstein öffnen und uns aus unserem Gefängnis befreien werden! Bald...~ [NWMORA76]
@6 = ~Was ist das? Die Sklaven haben es gewagt, unser Reich zu betreten!~ [NWMORA77]
@7 = ~Tötet die Warmblüter! Vernichtet die Sklaven!~ [NWMORA70]
