IF
	OpenState(Myself,TRUE)
	!Global("MAGICMOUTH_DONE","MYAREA",1)
THEN
	RESPONSE #100
		SetGlobal("MAGICMOUTH_DONE","MYAREA",1)
		SetGlobal("MAGICMOUTH_TALK","MYAREA",3)
END

IF
	OpenState(Myself,TRUE)
	!Global("MAGICMOUTH_TALK","MYAREA",3)
THEN
	RESPONSE #100
		SetGlobal("MAGICMOUTH_DONE","MYAREA",1)
		SetGlobal("MAGICMOUTH_TALK","MYAREA",3)
END

IF
	!Global("MAGICMOUTH_DONE","MYAREA",0)
	!Global("MAGICMOUTH_TALK","MYAREA",3)
THEN
	RESPONSE #100
		Unlock(Myself)
		OpenDoor(Myself)
END

